<h1 class="session">
Login
<br>
<h4><%= flash[:notice] %></h4>
<!-- form will POST to '/login' -->
<div class="form">
<%= form_tag(login_path) do %>
  <%= label_tag :username %>
  <p><%= text_field_tag :username %><p>
  <%= label_tag :password %>
  <p><%= password_field_tag :password %><p>
  <%= submit_tag "Login", class: "btn" %><br><br>
<% end %>
<p class="tryb_new">
Not a trybNY Member?
</p>
<p><%= button_to "Sign-up", new_user_path, class: "btn", method: :get %></p>
</div>